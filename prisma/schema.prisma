generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Url {
  id        String   @id @default(cuid())
  longUrl   String
  shortCode String   @unique
  clicks    Int      @default(0)
  createdAt DateTime @default(now())
}
